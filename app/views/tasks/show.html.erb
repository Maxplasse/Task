<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<ul>
  <li><%= link_to "Back to list", tasks_path %></li>
  <li><%= link_to "Edit the task", edit_task_path %></li>
</ul>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
